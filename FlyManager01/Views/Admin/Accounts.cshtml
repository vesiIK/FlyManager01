@*@model IEnumerable<FlyManager01.Models.Accounts>*@
@*@model IEnumerable<FlyManagerVS.Models.Works>*@
@model IEnumerable<AccountsUser>

@{
    ViewData["Title"] = "Account";
}

<h1>Accounts</h1>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Usetname</th>
            <th>Email</th>
            <th>Telephon</th>
            <th>Work</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AccountsUser user in Model)
        {
            <tr>
                <td>@user.FName</td>
                <td>@user.LName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Role</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

