                    <li>Date of landing: @Html.DisplayFor(itemModel => item.ToDate)</li>
                    <li>Time: @Html.DisplayFor(itemModel => item.ToTime)</li>
                </ul> 

            </div>
            <div id="row">
                <ul class="no-bullets last">
                    <li>Prise: @Html.DisplayFor(itemModel => item.Ticket)€</li>
                    <li><i id="none">Buisness Class:</i>@Html.DisplayFor(itemModel => item.PriceBuisness)€</li>
                    <li>Type of aircraft: @Html.DisplayFor(itemModel => item.TypePlane)</li>
                </ul> 
               <a asp-controller="FlightsV" asp-action="InformationFlght" asp-route-id="@item.Id">
