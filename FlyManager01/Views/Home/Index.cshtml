@if(Model != null)
{
    @foreach (var item in Model) {
        <div class="flyght">
            <div id="smal-row">
             <span class="material-symbols-outlined lacIc">
                location_on
                    </span>
            </div>
            <div id="row">
                <p id="polet">
                <b>@Html.DisplayFor(itemModel => item.FromCity)</b></p>
                <ul class="no-bullets">

                    <li>Date of departure: @Html.DisplayFor(itemModel => item.FromDate)</li>
                    <li>Time: @Html.DisplayFor(itemModel => item.FromTime)</li>
                </ul>

            </div>
            <p id="polet"> <i class="fa-solid fa-arrow-right"></i></p>

            <div id="row"> 
                <p id="polet">
                    <b>@Html.DisplayFor(itemModel => item.ToCity)</b></P>
